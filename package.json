{
  "name": "reader",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://dmitrysteblyuk.github.io/charts",
  "scripts": {
    "start": "webpack-dev-server --mode development --host 0.0.0.0 --disable-host-check",
    "webpack": "rm -rf dist && webpack --mode production",
    "webpack:debug": "rm -rf dist && webpack --mode development",
    "closure": "rm -rf built && tsc --project ./tsconfig-closure.json && node ./compile-with-closure.js",
    "build": "yarn webpack && yarn closure",
    "test": "cross-env TS_NODE_FILES=true ts-node node_modules/jasmine/bin/jasmine --files=./definitions/globals.d.ts",
    "lint": "tslint --project ./tsconfig.json --format verbose \"./src/**/*.ts\"",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d dist"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "dependencies": {
    "terser-webpack-plugin": "^1.2.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/jasmine": "^3.3.7",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "gh-pages": "^2.0.1",
    "git-pre-push": "^0.0.5",
    "google-closure-compiler": "^20190301.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jasmine": "^3.3.1",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "source-map-loader": "^0.2.4",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
