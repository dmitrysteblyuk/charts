{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": false,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016.array.include",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "./definitions/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}