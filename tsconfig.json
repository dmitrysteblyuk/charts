{
  "compilerOptions": {
    "outDir": "./built",
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": false,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016.array.include",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "./definitions/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}